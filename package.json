{
  "name": "codybrunner.com",
  "version": "0.1.0",
  "description": "My personal website and blog",
  "author": {
    "email": "me@codybrunner.com",
    "name": "Cody Brunner",
    "url": "https://codybrunner.com"
  },
  "license": "MIT",
  "scripts": {
    "build": "next build",
    "dev": "next",
    "format": "prettier --write",
    "lint": "next lint",
    "prepare": "husky install",
    "start": "next start",
    "type-check": "tsc"
  },
  "dependencies": {
    "date-fns": "~2.28.0",
    "next": "~12.0.7",
    "next-seo": "~4.28.1",
    "react": "~17.0.2",
    "react-dom": "~17.0.2",
    "react-feather": "~2.0.9",
    "sass": "~1.45.1"
  },
  "devDependencies": {
    "@types/node": "~17.0.5",
    "@types/react": "~17.0.38",
    "@types/react-dom": "~17.0.11",
    "@typescript-eslint/eslint-plugin": "~5.8.1",
    "@typescript-eslint/parser": "~5.8.1",
    "autoprefixer": "~10.4.0",
    "cssnano": "~5.0.14",
    "eslint": "~8.5.0",
    "eslint-config-next": "~12.0.7",
    "eslint-config-prettier": "~8.3.0",
    "husky": "^7.0.0",
    "lint-staged": "~12.1.4",
    "next-sitemap": "~1.6.203",
    "postcss": "~8.4.5",
    "postcss-import": "~14.0.2",
    "postcss-preset-env": "~7.1.0",
    "postcss-url": "~10.1.3",
    "prettier": "~2.5.1",
    "tailwindcss": "~3.0.8",
    "typescript": "~4.5.4"
  },
  "eslintConfig": {
    "extends": [
      "next",
      "prettier"
    ],
    "ignorePatterns": [
      "package.json",
      "vercel.json"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "react/display-name": "off"
    }
  },
  "lint-staged": {
    "*.+(js|json|md|mdx|ts|tsx|yml|yaml)": [
      "prettier --write"
    ],
    "*.+(js|ts|tsx)": [
      "eslint --fix"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  }
}
